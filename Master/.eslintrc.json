{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-console": "warn",
    "semi": "warn",
    "quotes": ["error", "double"],
    "curly": "error",
    "no-const-assign": "error",
    "no-extra-semi": 0,
    "no-mixed-spaces-and-tabs": "error"
  }
}